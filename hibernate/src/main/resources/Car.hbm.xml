<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.hibernate.Car" table="cars">
        <meta attribute="class-description">This class
            contains developer's details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="brand" column="brand" type="string"/>
        <property name="model" column="model" type="string"/>
        <property name="power" column="power" type="int"/>
        <property name="mileage" column="mileage" type="double"/>
        <property name="year" column="year" type="int"/>

    </class>

</hibernate-mapping>
